{
    "name": "projek-xyz/slim",
    "description": "Core library for projek-xyz/slim-skeleton",
    "keywords": ["slim", "microframework", "framework", "core", "library"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fery Wardiyanto",
            "email": "feryardiyanto@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/projek-xyz/slim-framework/issues",
        "source": "https://github.com/projek-xyz/slim-framework"
    },
    "scripts": {
        "spec": [
            "@lint",
            "@test"
        ],
        "test": "phpunit -c tests/phpunit.xml",
        "lint": "phpcs --standard=PSR2 -n -p src"
    },
    "autoload": {
        "psr-4": {
            "Projek\\Slim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Projek\\Slim\\Tests\\": "tests/src/"
        }
    },
    "require": {
        "php": ">=5.5.0",
        "faapz/pdo": "^2.0",
        "league/climate": "^3.2",
        "league/flysystem": "^1.0",
        "league/plates": "^3.1",
        "monolog/monolog": "^2.1",
        "phpmailer/phpmailer": "^6.1",
        "slim/slim": "^3.5",
        "vlucas/phpdotenv": "^2.1",
        "vlucas/valitron": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
